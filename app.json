{
  "expo": {
    "name": "cafeteria",
    "slug": "cafeteria",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-font",
      "expo-sqlite"
    ],

  "expo": {
    "plugins": [
      ["expo-image-picker", {
        "photosPermission": "Necesitamos acceder a tus fotos para que elijas una imagen.",
        "cameraPermission": "Necesitamos acceder a la cámara para tomar fotos."
      }]
    ],
    "ios": {
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "Necesitamos acceder a tus fotos para que elijas una imagen.",
        "NSCameraUsageDescription": "Necesitamos acceder a la cámara para tomar fotos."
      }
    },
    "android": {
      "permissions": [
        "READ_MEDIA_IMAGES",           
        "READ_EXTERNAL_STORAGE",       
        "CAMERA"
      ]
    }
  }


    
  }
  
}
